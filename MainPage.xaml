<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="inventory_mobile_app.MainPage"
             BackgroundColor="#E96822"
             NavigationPage.HasNavigationBar="False"
             >

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="10"
            VerticalOptions="Center"
            >
            <Image Source="Main.png" HeightRequest="200" WidthRequest="200" />
            <Button Text="Log in" Style="{StaticResource LoginButton}" Clicked="OnLoginButtonClicked"/>
            <Label Text="or" Style="{StaticResource CenterTextLogIn}"/>
            <Button Text="Sign up" Style="{StaticResource SignupButton}" Clicked="HandleSignUp"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>